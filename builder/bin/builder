#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use Builder\Console\Command;
use Symfony\Component\Console\Application;
use Symfony\Component\Console\Input\ArgvInput;
use Symfony\Component\Console\Output\ConsoleOutput;

$app = new Application('Kiboko Docker Builder');

$app->addCommands([
    new Command\BuildCommand('build', __DIR__ . '/../config/'),

    new Command\PushCommand('push', __DIR__ . '/../config/'),

    new Command\ListCommand('which', __DIR__ . '/../config/'),

    new Command\TreeCommand('tree', __DIR__ . '/../config/'),

    new Command\TestCommand('test', __DIR__ . '/../config/'),
]);

$app->run(new ArgvInput($argv), new ConsoleOutput());